
@{
    ViewBag.Title = "Index";
}
<link href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/AdminLTE/plugins/jQuery/jQuery-2.1.3.min.js"></script>
<style>
    td.details-control {
        background: url('../resources/details_open.png') no-repeat center center;
        cursor: pointer;
    }

    tr.details td.details-control {
        background: url('../resources/details_close.png') no-repeat center center;
    }
</style>
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Dashboard
        <small>Control panel</small>
    </h1>
</section>
<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-aqua">
                <div class="inner">
                    <div class="col-lg-8">
                        <p>Total Target</p>
                        <p>This Month Order</p>
                        <p>This Month Sale</p>
                        <p>Remaining Target</p>
                    </div>
                    <div>
                        <p id="totalTarget">150</p>
                        <p id="thisMonthOrder">150</p>
                        <p id="thisMonthSale">150</p>
                        <p id="remainingTarget">150</p>
                    </div>
                </div>
            </div>
        </div><!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-green">
                <div class="inner">
                    <div class="col-lg-8">
                        <p>Total Recovery Target</p>
                        <p>&nbsp;&nbsp;</p>
                        <p>Total Received</p>
                        <p>Remaining Recovery</p>
                    </div>
                    <div>
                        <p id="totalRecoveryTarget">150</p>
                        <p>&nbsp;&nbsp;</p>
                        <p id="totalReceived">150</p>
                        <p id="remainingRecovery">150</p>
                    </div>
                </div>
            </div>
        </div><!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-yellow">
                <div class="inner">
                    <div class="col-lg-8">
                        <p>Total Cash In Hand</p>
                        <p>&nbsp;&nbsp;</p>
                        <p>Total In Banks</p>
                        <p>Total Cash & Banks</p>
                    </div>
                    <div>
                        <p id="totalCashInHand">150</p>
                        <p>&nbsp;&nbsp;</p>
                        <p id="totalInBanks">150</p>
                        <p id="totalCashAndBanks">150</p>
                    </div>
                </div>
            </div>
        </div><!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-red">
                <div class="inner">
                    <div class="col-lg-8">
                        <p>Total Purchase Order</p>
                        <p>&nbsp;&nbsp;</p>
                        <p>Total Purchase</p>
                        <p>Remaining Purchase</p>
                    </div>
                    <div>
                        <p id="totalPurchaseOrder">150</p>
                        <p>&nbsp;&nbsp;</p>
                        <p id="totalPurchase">150</p>
                        <p id="remainingPurchase">150</p>
                    </div>
                </div>
            </div>
        </div><!-- ./col -->
    </div><!-- /.row -->
    <div class="row">
        <div class="col-lg-6">
            <h2><b><u>Party Wise Sale</u></b></h2>
            <table id="example" class="display" style="width:100%">
                <thead>
                    <tr>
                        <td></td>
                        <th>Account Number</th>
                        <th>Name</th>
                        <th>Sales Target</th>
                        <th>Total Order</th>
                        <th>Total Sale</th>
                        <th>Remaining Sale</th>
                    </tr>
                </thead>
            </table>
        </div>

        <div class="col-lg-6">
            <h2><b><u>Party Wise Recovery</u></b></h2>
            <table id="exampleGrid" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th>Account Number</th>
                        <th>Name</th>
                        <th>Sales Target</th>
                        <th>Total Order</th>
                        <th>Total Sale</th>
                        <th>Remaining Sale</th>
                    </tr>
                </thead>
            </table>
        </div>

    </div>
</section><!-- /.content -->
@section Scripts{

    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>

    <script src="~/Scripts/dashboard.js"></script>
}